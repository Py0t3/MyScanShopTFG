<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#2B2A2A"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp"
    android:scrollbarSize="2dp">

    <ImageView
        android:id="@+id/imagenGrid"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/labelgrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#994A4949"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:padding="0dp"
        android:text="Nombre del Producto"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagenGrid"
        app:layout_constraintEnd_toEndOf="@+id/imagenGrid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imagenGrid" />

</androidx.constraintlayout.widget.ConstraintLayout>